<Page x:Class="Ab2d.ZoomControlSample.ZoomPanel.ManualZoomPanelControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ab2d="clr-namespace:Ab2d.Controls;assembly=Ab2d.Controls.ZoomPanel"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ManualZoomPanelControl">      
    <Grid Name="MainGrid">
        <ab2d:ZoomPanel Name="ZoomPanel1" ZoomMode="None" ZoomFactor="0.8">
            <Frame Name="ZoomPanelContentFrame" Source="/Resources/tiger.xaml" NavigationUIVisibility="Hidden"/>
        </ab2d:ZoomPanel>

        <TextBlock Grid.Row="0" FontWeight="Bold" FontSize="20" Foreground="#444" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left"
                   Text="Using ZoomPanel with zooming and panning from code behind"/>
    </Grid>
</Page>
